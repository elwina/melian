{
  "name": "菲涅尔圆孔衍射V2", // 实验名称
  "des": {
    "type": "image", // PPT展示课件
    "content": [
      "[fresnel_hole1]",
      "[fresnel_hole2]",
      "[fresnel_hole3]",
      "[fresnel_hole4]"
    ]
  },
  "lens": [
    // 镜头定义
    {
      "id": 0,
      "uname": "laser01", // 镜头图像定义
      "name": "激光", // 镜头名称定义
      "distancemm": 0, // 初始摆放位置
      "hide": false, // 是否隐藏
      "option": {
        "wave": "660" // 参数
      }
    },
    {
      "id": 1,
      "uname": "holes01",
      "name": "孔",
      "distancemm": 40,
      "hide": false,
      "option": { "R_h": 0.5 }
    },

    {
      "id": 2,
      "uname": "board01",
      "name": "光屏",
      "distancemm": 75,
      "hide": false,
      "option": {
        "rangePlus": 1,
        "plus": 1
      }
    }
  ],
  "light": {
    // 光源定义
    "type": "D65", // 光源类型
    "filter": 660 // 滤光片参数
  },
  "screen": {
    // 屏幕定义
    "type": "FastBoardUni", // 屏幕类型
    "options": {
      // 屏幕参数
      "color": "#000000", // 屏幕颜色
      "require": {
        // 函数需求
        "R_h": "{1}.R_h", // 这个表示id为1的镜头的R_h参数
        "d2": "[2]", // 这个表示id为2的镜头的位置坐标
        "d1": "[1]",
        "d0": "[0]",
        "plus": "{2}.plus"
      },
      // 光强函数
      // 其中l表示波长，r表示屏幕上的点到光源的距离，是程序内部会添加的值，其他值来源于上面的require
      "func": "plus*(-(floor(R_h^2/l*(1/ (sqrt((d2-d0)^2+(r)^2)-sqrt(R_h^2+(d1-d0)^2))+1/sqrt(R_h^2+(d1-d0)^2)))%2)+(R_h^2/l*(1/ (sqrt((d2-d0)^2+(r)^2)-sqrt(R_h^2+(d1-d0)^2))+1/sqrt(R_h^2+(d1-d0)^2)))%1)^2"
    }
  },
  "measure": {
    // 测量工具
    "type": "None", // 测量工具类型
    "options": {}
  },
  "control": {
    "showmm": [0, 1, 2, 3, 4, 5], // 定义光具座上显示坐标的镜头
    "move": [0, 1, 2] // 定义可以移动的镜头
  },
  "setting": [
    // 工具栏
    {
      "name": "激光", // 工具栏名称
      "type": "ButtonSlider", // 工具栏组件类型
      "target": ["light.filter", "{0}.wave"], // 工具栏控制的参数
      "options": {
        // 工具栏参数
        "options": [
          // 以下是每个工具类型不同的参数
          {
            "name": "无",
            "value": -1
          },
          {
            "name": "红",
            "value": 660
          },
          {
            "name": "绿",
            "value": 550
          },
          {
            "name": "蓝",
            "value": 450
          }
        ],
        "min": 420,
        "max": 720,
        "step": 1,
        "toFixedPoint": 0,
        "unit": "nm"
      }
    },
    {
      "name": "圆孔半径R",
      "type": "ButtonSlider",
      "target": ["{1}.R_h"],
      "options": {
        "options": [
          {
            "name": "0.2mm",
            "value": 0.2
          },
          {
            "name": "0.5mm",
            "value": 0.5
          }
        ],
        "min": 0.01,
        "max": 0.5,
        "step": 0.01,
        "toFixedPoint": 2,
        "unit": "mm"
      }
    },
    {
      "name": "强度加倍",
      "type": "ButtonSlider",
      "des": "在原有值基础上增强光强。用于观察弱光。",
      "target": ["{2}.plus"],
      "options": {
        "options": [
          {
            "name": "1",
            "value": 1
          },
          {
            "name": "2",

            "value": 2
          }
        ],
        "min": 0.1,
        "max": 5,
        "step": 0.1,
        "toFixedPoint": 1,
        "unit": ""
      }
    }
  ]
}
